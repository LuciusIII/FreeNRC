import urllib.request
wantedurl = input("Plak NRC link hier: ")

def linktolist(link):
    source = str(urllib.request.urlopen(link).read(), 'utf-8')

    start = source.find("content ")
    end = source.find("article__published-in", start)
    body = source[start:end]

    cleanbody = u""
    tagvar = True

    for i in range(len(body)):
        if body[i] == "<":
            tagvar = True
            #print("< found, stopping html tag")
        elif body[i] == ">":
            tagvar = False
            #print("> found, html tag ended")
        elif tagvar == False:
            #print("not inside html tag, appending if clean")
            cleanbody += body[i]

    notabbody = u""
    skip = False

    for i in range(len(cleanbody)):
        if skip == False:
            if cleanbody[i] == "\\":
                if cleanbody[i+1] != "n":
                    skip = True
                else:
                    notabbody += "\\n"
                    skip = True
            else: notabbody += cleanbody[i]           
        else:
            skip = False

    bodylist = notabbody.split("\\n")

    return bodylist
    
print(linktolist(wantedurl))